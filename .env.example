# Copia questo file in .env e inserisci i token reali (non committare .env)
TELEGRAM_TOKEN=
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=telegram-bot-reddit

# Directory where downloaded files will be saved by the bot
# Example: /mnt/truenas-bot or /home/user/bot-data
SAVE_DIR=/mnt/truenas-bot

# Comma-separated list of allowed Telegram user IDs (optional)
# Example: 123456789,987654321
ALLOWED_CHAT_IDS=123456789

# Enable the daily watcher (true/false) - can be 1/0, true/false, yes/no
WATCHER_ENABLED=false

# On startup, send notification to the given chat id
# Set STARTUP_NOTIFY to true to enable, and STARTUP_CHAT_ID to the numeric chat id
STARTUP_NOTIFY=false
STARTUP_CHAT_ID=123456789
